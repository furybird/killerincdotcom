/* MASTHEAD */

.text.nav {
  height: 52px;
  background-color: rgba(255, 255, 255, 0.99);
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.10);
  position: fixed;
  padding: 0;
  top: 0px;
  width: 100%;
  z-index: 9999999;
}
.topnav .mnav {
  font: 700 14px/16px 'PT Sans Narrow', Helvetica, Arial, sans-serif;
  color: #000;
  display: inline-block;
  padding-top: 20px;
  padding-left: 16px;
  padding-right: 18px;
  text-transform: uppercase;
  text-decoration: none;
  text-align: left;
}
#killerinc-nav-item{
  width:82px;
  height:auto;
  padding-top: 14px;
} 
.topnav a:hover {
  xopacity: 0.5;
}


/* Hide the link that should open and close the topnav on small screens */
.topnav a.icon {
  display: none;
  margin-left: -18px;
  height: 16px;
  width: 24px;
  opacity:1;
  transition: opacity 0.5s;
}
.topnav a.icon img{
  height: 16px;
  width: 24px;
}
.topnav a.icon:hover {
  opacity:0.5;
  transition: opacity 0.5s;
}
.topnav a.icon:after {
  opacity:1;
  transition: opacity 0s;
}
.cart-info{
  	font: 700 14px/16px 'PT Sans Narrow', Helvetica, Arial, sans-serif;
  	text-transform: uppercase;
    box-sizing: border-box;
    height: 52px;
    padding-top: 18px;
    padding-left: 20px;
	background-color: #f4f4f4;
}
.cart-info svg{
  	height: 18px;
	width: auto;
	padding-right: 8px;
	margin-bottom: -4px;
}


/* FOOTER */
.text.footer {
